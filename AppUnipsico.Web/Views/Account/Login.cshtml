@using AppUnipsico.Web.ViewModels;
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section class="py-5">
    <div class="container px-5">
        <div class="rounded-3 py-5 px-4 px-md-5 mb-5 mx-auto">
            <div class="text-center mb-5">
                <img src="~/img/logo.png" alt="" class="responsive-image" />
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="UserName" class="form-control" type="text" placeholder="nome@exemplo.com" required value="teste@teste.com.br" />
                            <label for="username">Usuário</label>
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Senha" id="Password" name="Password" required value="Teste@2024" />
                        </div>
                        <div class="d-grid">
                            <button id="js-login-btn" type="submit" class="btn btn-danger btn-block btn-lg">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>
